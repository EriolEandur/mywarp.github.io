  <body class="<%= page_classes %>">

    <header id="site-header">

      <% link_to '/' do %>
        <%= image_tag lorem.image('50x50', :random_color => true, :text => 'logo'), :height => '50' , :alt => 'site-logo'%>
        <h1 id="site-titel">
          Middleman Cabinet
